@{
    ViewBag.Title = Model.Title;
}
@model      MyEvernote.WebApp.ViewModels.ErrorViewModel

<span>@Model.Header</span>

<span>@Model.Title</span>



@foreach (MyEvernote.Entities.Messages.ErrorMessageObj msg in Model.Items)
{
    @msg.Message<br />
}



@{
    string js = string.Empty;

    if (Model.IsRedirecting == true)
    {
        js = @"   setTimeout(function myfunction() { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}

<script src="~/js/jquery.js"></script>
<script>
    //sayfa yüklendikten sonra çalışır
    $(document).ready(function () {
        $("footer").parent().hide();  //footerı gizledik


        //yukarıdaki htmli olduğu gibi ekliyoruz.yukarıda ne görüyorsan o şekilde ekle dedik.
